<div class="text-center" style="padding: 150px 0 50px 0; font-size: 40px;">ログイン</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row pb-4">
      <div class="col-4 text-right">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-7">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", :size => "50" %>
      </div>
    </div>
    <div class="row" style="padding-bottom: 70px;">
      <div class="col-4 text-right">
        <%= f.label :パスワード %>
      </div>
      <div class="col-7">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", :size => "50" %>
      </div>
    </div>
    <div class="row justify-content-center" style="padding-bottom: 30px;">
      <%= f.submit "ログイン", class: "search" %>
    </div>
    <div class="row">
      <div class="col text-right" style="margin-right: 190px;">
        <%= link_to "会員登録ページへ", new_customer_registration_path %>
      </div>
    </div>
  </div>
<% end %>
