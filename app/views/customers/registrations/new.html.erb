<%= render "customers/customers/header" %>

<div class="text-center" style="padding: 150px 0 50px 0; font-size: 40px;">会員登録</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="row pb-4">
      <div class="col-4 text-right"><%= f.label :お名前 %></div>
      <div class="col-7"><%= f.text_field :name, autofocus: true, placeholder:"鈴木一郎", :size => "50" %></div>
    </div>
    <div class="row pb-4">
      <div class="col-4 text-right"><%= f.label :メールアドレス %></div>
      <div class="col-7"><%= f.email_field :email, placeholder:"example@gmail.com", :size => "50" %></div>
    </div>
    <div class="row pb-4">
      <div class="col-4 text-right"><%= f.label :電話番号 %></div>
      <div class="col-7"><%= f.text_field :phone_number, placeholder:"0300000000", :size => "50" %></div>
    </div>
    <div class="row pb-4">
      <div class="col-4 text-right"><%= f.label :パスワード %></div>
      <div class="col-7">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"111111", :size => "50" %>
      </div>
    </div>
    <div class="row" style="padding-bottom: 70px;">
      <div class="col-4 text-right"><%= f.label :"パスワード(確認)" %></div>
      <div class="col-7">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード（確認）", :size => "50" %>
      </div>
    </div>
    <div class="row justify-content-center" style="padding-bottom: 30px;">
      <%= f.submit "登録", class: "search" %>
    </div>
    <div class="row">
      <div class="col text-right" style="margin-right: 190px; padding-bottom: 100px;">
        <%= link_to "ログインページへ", new_customer_session_path %>
      </div>
    </div>
  </div>
<% end %>

<%= render "customers/customers/footer" %>
