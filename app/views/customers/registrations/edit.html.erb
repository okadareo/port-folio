<%= render "customers/customers/header" %>
<h2><%= current_customer.name %>さんのマイページ編集画面</h2>
<div class="row-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="field">
            <%= f.label :お名前 %><br />
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email %>
          </div>
          <div class="field">
            <%= f.label :電話番号 %><br />
            <%= f.text_field :phone_number %>
          </div>
          <div class="actions">
            <%= f.submit "保存" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Back", :back %>
<%= render "customers/customers/footer" %>
