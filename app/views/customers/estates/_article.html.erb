<div class="carousel-item active">
  <div class="row">
    <div class="col-4">
      <div class="card mb-4" style="height:550px;">
        <div class="card-img-top">
          <%= link_to attachment_image_tag(estates.first, :background_image, format: 'jpeg', size: "348x200"), estate_path(estates.first) %>
        </div>
        <div class="card-title" style="padding: 10px 0 0 10px;">
          <%= estates.first.name %>　<%= estates.first.room_number %>号室
        </div>
        <div class="card-body" style="padding: 10px 0 0 10px;">
          <div class="row justify-content-start">
            <div class="col-2 address">住所</div>
            <div class="col-10 address"><%= estates.first.address %></div>
          </div><br>
          <div>間取り　<%= estates.first.floor %></div><br>
          <div>賃料　¥<%= estates.first.price.to_s(:delimited) %></div><br>
          <div>投稿日時　<%= estates.first.created_at.strftime('%Y年%m月%d日 %H時%M分') %></div><br>
