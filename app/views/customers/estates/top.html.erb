<%= search_form_for @q do |f| %>
  <div class="d-flex justify-content-center" style="padding-top: 50px;">
    <div class="search_field" style="padding-bottom: 10px;">
      <%= f.select :address_start,
      [["東京都千代田区"],
      ["東京都中央区"],
      ["東京都港区"],
      ["東京都新宿区"],
      ["東京都文京区"],
      ["東京都台東区"],
      ["東京都墨田区"],
      ["東京都江東区"],
      ["東京都品川区"],
      ["東京都目黒区"],
      ["東京都大田区"],
      ["東京都世田谷区"],
      ["東京都渋谷区"],
      ["東京都中野区"],
      ["東京都杉並区"],
      ["東京都豊島区"],
      ["東京都北区"],
      ["東京都荒川区"],
      ["東京都板橋区"],
      ["東京都練馬区"],
      ["東京都足立区"],
      ["東京都葛飾区"],
      ["東京都江戸川区"]], {include_blank: "物件住所"} %>

      <%= f.select :floor_eq,
      [["1R"],["1K"],["1DK"],["1LDK"],["2K"],["2DK"],["2LDK"],["3DK"],["3LDK"],
      ["4DK"],["4LDK"],["5DK"],["5LDK"]], {include_blank: "間取り"} %>

      <%= f.number_field :price_gteq, :placeholder => "賃料 (半角数字)", style: "border-width: thin; margin-left: 1px; height: 22px; border-radius: 2px;" %> 〜
      <%= f.number_field :price_lteq, :placeholder => "賃料 (半角数字)", style: "border-width: thin; height: 22px; border-radius: 2px;" %>
    </div>
  </div>
  <div class="search_field d-flex" style="justify-content: center; padding-top: 5px;">
    <%= f.search_field :keyword, value: @keywords,
    :placeholder => "フリーワード　(検索例)浴室乾燥機　オートロック", style: "outline-offset: 0; border-width: thin; height: 22px; border-radius: 2px; padding-right: 5px;", :size => "58" %>
  </div>
  <div class="d-flex justify-content-center" style="padding-top: 50px;">
    <%= f.submit "検索", class: "search" %>
  </div>
<% end %>


<div class="new" style="margin-top: 100px; padding-bottom: 100px; background-color: #EB9FEF;">
  <div class="row justify-content-center p-5" style="color: white; font-weight: bold;">
    <div class="text" style="font-size: 60px;">
      <div class>N e w</div>
    </div>
  </div>
  <div class="container">
    <div id="example-3" class="carousel slide" data-ride="carousel" style="width:100%">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row">
            <% @estates.first(3).each do |estate| %>
              <div class="col-4">
                <div class="card mb-4" style="height:550px;">
                  <div class="card-img-top">
                    <%= link_to attachment_image_tag(estate, :background_image, format: 'jpeg', size: "348x200"), estate_path(estate) %>
                  </div>
                  <div class="card-body" style="padding: 10px 0 0 8px;">
                    <div class="card-title">
                      <%= estate.name %>　<%= estate.room_number %>号室
                    </div>
                    <div class="card-text">
                      <%= estate.address %>
                    </div><br>
                    <div>
                      賃料：¥<%= estate.price.to_s(:delimited) %>　間取り：<%= estate.floor %>
                    </div><br>
                  </div>
                  <div class="card-footer" style="padding-left: 8px;">
                    <small class="text-muted">投稿日時　<%= estate.created_at.strftime('%Y年%m月%d日 %H時%M分') %></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="row">
            <% @estates.drop(3).each do |estate| %>
              <div class="col-4">
                <div class="card mb-4" style="height:550px;">
                  <div class="card-img-top">
                    <%= link_to attachment_image_tag(estate, :background_image, format: 'jpeg', size: "348x200"), estate_path(estate) %>
                  </div>
                  <div class="card-body" style="padding: 10px 0 0 8px;">
                    <div class="card-title">
                      <%= estate.name %>　<%= estate.room_number %>号室
                    </div>
                    <div class="card-text">
                      <%= estate.address %>
                    </div><br>
                    <div>
                      賃料：¥<%= estate.price.to_s(:delimited) %>　間取り：<%= estate.floor %>
                    </div><br>
                  </div>
                  <div class="card-footer" style="padding-left: 8px;">
                    <small class="text-muted">投稿日時　<%= estate.created_at.strftime('%Y年%m月%d日 %H時%M分') %></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <a class="carousel-control-prev justify-content-start" href="#example-3" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next justify-content-end" href="#example-3" role="button" data-slide="next">
          <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

