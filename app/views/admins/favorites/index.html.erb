<%= render "admins/customers/header", researches: @researches %>

<div class="container" style="margin-bottom: 20px;">
  <div style="text-align: center; word-break: break-all; overflow-wrap: break-word; padding-top: 130px; font-size: 30px; font-weight: bold;">
    <div style="display: inline-block; text-align: left;">
      <%= @customer.name %> 様
    </div>
  </div>
  <div style="text-align: center; padding-bottom: 50px; font-size: 30px; font-weight: bold;">
    お気に入り物件一覧
  </div>

  <% if @favorites.present? %>
    <% @favorites.each do |favorite| %>
      <div class="card shadow" style="margin-bottom: 30px;">
        <div class="row">
          <div class="col-md-2 col-sm-12">
            <%= attachment_image_tag favorite.estate, :background_image, format: 'jpeg', size: "245x245" %>
          </div>
          <div class="col-md-10 col-sm-12" style="padding-left: 70px;">
            <table class="table table-striped" style="margin-bottom: 0;">
              <tr>
                <th style="width: 20%;">物件名</th>
                <td class="name"><%= favorite.estate.name %>　<%= favorite.estate.room_number %>号室</td>
              </tr>
              <tr>
                <th>住所</th>
                <td class="address"><%= favorite.estate.address %></td>
              </tr>
              <tr>
                <th>賃料</th>
                <td>¥<%= favorite.estate.price.to_s(:delimited) %></td>
              </tr>
              <tr>
                <th>間取り</th>
                <td><%= favorite.estate.floor %></td>
              </tr>
              <tr>
                <th>お気に入りした日時</th>
                <td><%= favorite.created_at.strftime('%Y年%m月%d日 %H時%M分') %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div style="text-align: center; padding-top: 120px; font-size: 25px; font-weight: bold;">お気に入りされた物件はございません</div>
  <% end %>
</div>
<%= paginate @favorites %>