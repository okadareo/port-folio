<%= render "admins/customers/header" %>

<div class="text-center pt-5 pb-5" style="font-size: 30px; font-weight: bold;">入稿物件一覧</div>
<div class="container">
  <div class="row">
    <% @estates.each do |estate| %>
      <div class="col-11">
        <div class="card">
          <div class="card-body">
            <%= attachment_image_tag estate, :background_image, format: 'jpeg', size: "100x100" %>
            <h5>物件名：<%= estate.name %> <%= estate.room_number %>号室</h5>
            <h5>住所：<%= estate.address %></h5>
            <h5>間取り：<%= estate.floor %></h5>
            <h5>賃料：¥<%= estate.price.to_s(:delimited) %></h5>
            <h5>投稿日時：<%= estate.created_at.strftime('%Y年%m月%d日 %H時%M分') %></h5>
            <h5>更新日時：<%= estate.updated_at.strftime('%Y年%m月%d日 %H時%M分') %></h5>
            <h5><%= link_to "編集", edit_admins_estate_path(estate) %></h5>
            <h5><%= link_to "削除", admins_estate_path(estate), method: :delete %></h5>

            <h3>お問い合わせ一覧</h3>
            <% estate.researches.each do |research| %>
            <h5>ユーザー名：<%= research.customer.name %></h5>
            <h5>メールアドレス：<%= research.customer.email %></h5>
            <h5>電話番号：<%= research.customer.phone_number %></h5>
            <h5>お問い合わせタイトル：<%= research.title %></h5>
            <h5>お問合わせ本文：<%= research.body %></h5>
            <h5>お問い合わせ日時：<%= research.created_at.strftime('%Y年%m月%d日 %H時%M分') %></h5>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <%= paginate @customers %>
  </div>
</div>

<div class="text-center pt-5 pb-5" style="font-size: 30px; font-weight: bold;">カスタマーズ</div>
<div class="container" style="margin-bottom: 100px;">
  <% @customers.each do |customer| %>
    <div class="card shadow">
      <div class="row pt-5">
        <div class="col-3 text-center pt-1" style="font-weight: bold; font-size: 25px;">お名前</div>
        <div class="col-7">
          <div class="card" style="font-size: 25px;">
            <%= customer.name %>
          </div>
        </div>
      </div>
      <div class="row pt-4">
        <div class="col-3 text-center" style="font-weight: bold; font-size: 25px;">メールアドレス</div>
        <div class="col-7">
          <div class="card" style="font-size: 25px;">
            <%= customer.email %>
          </div>
        </div>
      </div>
      <div class="row pt-4 pb-5">
        <div class="col-3 text-center" style="font-weight: bold; font-size: 25px;">電話番号</div>
        <div class="col-7">
          <div class="card" style="font-size: 25px;">
            <%= customer.phone_number %>
          </div>
        </div>
      </div>
  　</div>
　<% end %>
</div>

<%= paginate @customers %>

<%= render "admins/customers/footer" %>