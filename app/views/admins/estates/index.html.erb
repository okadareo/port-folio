<%= render "admins/customers/header" %>

<div class="text-center" style="padding: 130px 0 50px 0; font-size: 30px; font-weight: bold;">入稿物件一覧</div>
<div class="container" style="margin-bottom: 20px;">
  <% if @estates.present? %>
    <% @estates.each do |estate| %>
      <div class="card shadow" style="margin-bottom: 30px;">
        <div class="row">
          <div class="col-md-3 col-sm-12">
            <%= attachment_image_tag estate, :background_image, format: 'jpeg', size: "285x358" %>
          </div>
          <div class="col-md-9 col-sm-12">
            <table class="table table-striped">
              <tr>
                <th class="th" style="width: 20%;">物件名</th>
                <td class="name"><%= estate.name %>　<%= estate.room_number %>号室</td>
                <td class="td" style="width: 18%;"></td>
              </tr>
              <tr>
                <th>住所</th>
                <td class="address"><%= estate.address %></td>
                <td></td>
              </tr>
              <tr>
                <th>賃料</th>
                <td>¥<%= estate.price.to_s(:delimited) %></td>
                <td></td>
              </tr>
              <tr>
                <th>間取り</th>
                <td><%= estate.floor %></td>
                <td></td>
              </tr>
              <tr>
                <th>投稿日時</th>
                <td><%= estate.created_at.strftime('%Y年%m月%d日 %H時%M分') %></td>
                <td></td>
              </tr>
              <tr>
                <th>更新日時</th>
                <td><%= estate.updated_at.strftime('%Y年%m月%d日 %H時%M分') %></td>
                <td><%= link_to "編集", edit_admins_estate_path(estate), class: "edit btn-sm btn-outline-secondary", :style=>"text-decoration: none;" %></td>
              </tr>
              <tr>
                <th>お問い合わせ件数</th>
                <td class="researches" style="font-size: 22px;">
                  <%= link_to admins_estate_path(estate) do %>
                    <i class="fas fa-house-user"></i>
                  <% end %>
                  <%= estate.researches.count %>
                </td>
                <td><%= link_to "削除", admins_estate_path(estate), method: :delete, class: "edit btn-sm btn-outline-secondary", :style=>"text-decoration: none;" %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center pt-5">入稿物件はありません。</div>
  <% end %>
  <%= paginate @estates %>
</div>

<%= render "admins/customers/footer" %>