<%= month_calendar events: calendars do |date, calendars| %>
  <%= date.day %>
  <% calendars.each.with_index(1) do |calendar, i| %>
    <% if i > 8 %>
      <% i = i - 8 %>
      <div style="font-size: 13px;">
        <%= calendar.start_time.strftime('%H:%M') %> <%= link_to truncate("#{calendar.title}", length:13), admins_calendar_path(calendar) %>
        <%= link_to "+ #{ i }件の予定がございます" %>
      </div>
    <% else %>
      <div style="font-size: 13px;">
        <%= calendar.start_time.strftime('%H:%M') %> <%= link_to truncate("#{calendar.title}", length:13), admins_calendar_path(calendar) %>
      </div>
    <% end %>
  <% end %>
<% end %>