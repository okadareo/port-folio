<div class="container">
  <div class="row">
    <h2 style="padding-top: 20px; margin: 0 auto; font-weight: bold;">スケジュール編集</h2>
  </div>
  
  <div style="padding: 20px 0 10px 0;">
    <%= render 'layouts/error_messages', model: calendar %>
  </div>
  
  <%= form_with model: calendar, url: admins_calendars_path + "/" + calendar.id.to_s, remote: true do |f| %>
    <div class="row justify-content-center pb-3">
      <%= f.text_field :title, :size=> "54", placeholder: "スケジュール名" %>
    </div>
    <div class="row justify-content-center pb-3">
      <%= f.text_area :body, :size=> "53x8", placeholder: "スケジュール内容" %>
    </div>
    <div class="row justify-content-center pb-3">
      <%= f.datetime_field :start_time %>〜<%= f.datetime_field :finish_time %>
    </div>
    <div class="row justify-content-center pb-3">
      <%= f.submit "保存", class: "modal-calendar-submit btn btn-dark" %>
    </div>
  <% end %>
</div>
