<h2>管理画面</h2>
<div class="container">
  <div class="row-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <div class="field">
              <p><%= f.label :メールアドレス %>　<%= f.email_field :email, autofocus: true %></p>
            <div class="field">
              <p><%= f.label :パスワード %>　<%= f.password_field :password %></p>
            </div>
            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "admins/customers/footer" %>
