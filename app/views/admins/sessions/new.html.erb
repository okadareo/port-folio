<div class="container pt-5 pb-5">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= link_to image_tag("logo1.jpg"), new_admin_session_path %>
    </div>
  </div>
</div>

<div class="text-center pt-5 pb-5" style="font-size: 30px; font-weight: bold;">管理画面</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row pb-4">
      <div class="col-4 text-right"><%= f.label :メールアドレス %></div>
      <div class="col-7"><%= f.email_field :email, autofocus: true, :size => "50" %></div>
    </div>
    <div class="row" style="padding-bottom: 70px;">
      <div class="col-4 text-right"><%= f.label :パスワード %></div>
      <div class="col-7"><%= f.password_field :password, :size => "50" %></div>
    </div>
    <div class="row justify-content-center"><%= f.submit "ログイン", class: "search" %></div>
  </div>
<% end %>
