<div class="container" style="padding: 60px;">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= link_to image_tag("logo1.jpg"), new_admin_session_path, class: "image-top" %>
    </div>
  </div>
  <div style="text-align: center; padding: 100px 0 50px 0; font-size: 30px; font-weight: bold;">
    管理者ログイン
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row pb-4">
      <div class="col-4 text-right"><%= f.label :メールアドレス %></div>
      <div class="col-7"><%= f.email_field :email, autofocus: true, :size => "50" %></div>
    </div>
    <div class="row" style="padding-bottom: 50px;">
      <div class="col-4 text-right"><%= f.label :パスワード %></div>
      <div class="col-7"><%= f.password_field :password, :size => "50" %></div>
    </div>
    <div class="row justify-content-center">
      <%= f.submit "ログイン", class: "search" %>
    </div>
  <% end %>
</div>
